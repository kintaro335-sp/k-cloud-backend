// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  username String @unique
  passwordu String
  files Sharedfile[]
  tokens Tokens[]
}

model Sharedfile {
  id String @id
  userid String
  name String
  path String
  doesexpires Boolean
  isdir Boolean
  expire DateTime
  createdAt DateTime
  owner User @relation(fields: [userid], references: [id])
}

model Tokens {
  id String @id
  userid String
  token String
  expire Boolean
  dateExpire String
  owner User @relation(fields: [userid], references: [id])
}
