generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  @@index([id])
  @@index([username])
  id String @id
  username String @unique
  passwordu String
  isadmin Boolean @default(false)
  files Sharedfile[]
  tree Tree[]
}

model Sharedfile {
  @@index([path])
  @@index([userid])
  @@index([id])
  @@index([public])
  id String @id
  userid String
  name String
  path String
  doesexpires Boolean
  isdir Boolean
  public Boolean @default(false)
  expire DateTime
  createdAt DateTime
  owner User @relation(fields: [userid], references: [id])
}

model sharedfilesactivity {
  @@index([date])
  @@index([action])
  @@index([status])
  @@index([reason])
  id String @id
  date DateTime
  action String
  status String
  reason String
  user String
  tokenid String
  path String
}

model Tree {
  @@index([userid])
  userid String @id
  content Bytes
  index Bytes
  owner User @relation(fields: [userid], references: [id])
}
